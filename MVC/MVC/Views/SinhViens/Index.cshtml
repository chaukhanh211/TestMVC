
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var @i = 1;
}
<h2>@TempData["ThongBao"]</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Mã sinh viên</th>
            <th scope="col">Họ tên</th>
            <th scope="col">Ngày sinh</th>
            <th scope="col">Giới tính</th>
            <th scope="col">Quê quán</th>
            <th scope="col">Hành Động</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@i</th>
            <td>@item.MASV</td>
            <td>@item.HOTEN</td>
            <td>@item.NGAYSINH.Date.ToString("dd-MM-yyyy")</td>
            @if (@item.PHAI)
            {
                <td>
                    Nam
                </td>
            }
            else
            {
                <td>
                    Nữ
                </td>
            }
            <td>@item.QUEQUAN</td>
            <td>
                @*<a href="/SinhViens/Edit/@item.MASV" class="btn btn-default"> <i class="fa fa-pencil" aria-hidden="true"></i> </a>*@
                <a href="@Url.Action("Edit","SinhViens",new {ID =item.MASV})" class="btn btn-default"> <i class="fa fa-pencil" aria-hidden="true"></i> </a>
                <a href="@Url.Action("Delete","SinhViens",new { ID = item.MASV})" class="btn btn-default">  <i class="fa fa-trash" aria-hidden="true"></i> </a>
            </td>
        </tr>
            i++;
        }

    </tbody>
</table>
<a href="@Url.Action("Add","SinhViens")" class="btn btn-default">
    <i class="fa fa-plus-square" aria-hidden="true"></i> ADD
</a>


